$font = Roboto, sans-serif

$orange = #f3df6d

$yellow = #FFC000

$grey = #f0f0f0

$color = #2d2d2d

$blue = #4e61eb

$black = #121212
$dark = #121212

$linkred = #FF4444
$redlink = #FF4444

$bluelink = #4e61eb


marginBar()
	margin 0 0 15px 0

center-text()
	display flex
	flex-direction column
	text-align center
	justify-content center
	
button(color)
	center-text()
	font-size 70%
	width 170px
	height 40px
	cursor pointer
	border 4px solid color
	user-select none
	transition .2s ease
	box-shadow 0 10px 10px -10px rgba(0, 0, 55, 0.3)
	
button--hover(color)
	background-color rgba(color, .9)
	color #FFF
	text-shadow 1px 1px #A8A8A8
	
button__reg(color)
	background-color rgba(color, 0.3)
	transition .2s ease

button__reg--hover(color)
	box-shadow inset 2px 2px 3px rgba(color, .0)
	text-shadow 1px 3px 4px rgba(color, .0)
	background-color rgba(white, .1)
	
button__add--orange()
		margin 10px 0
		border-radius 2px
		border none
		font-size 14px
		letter-spacing .03em
		color #212121
		text-shadow 0px 1px 4px rgb(255, 245, 203)
		background-image: -webkit-linear-gradient(top,#F3DF6D 0,#FFD756 50%,#FFDA61 51%,#FFC000 100%);
		box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3), 0 1px 0 0 rgb(189, 157, 81)
		
			
placeholder()
	&::-webkit-input-placeholder 
		{block}
	&::-moz-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
		
block-border()
	border 1px solid #BBBBBB
	border-radius 2px
	box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3)
		
	
$header
	margin 25px 0 0 35px