.company-signup
	background-color white
	padding 20px 40px
	display flex
	flex-direction column
	align-items center
	transition .2s ease-in
	border none
	background linear-gradient(to bottom, #FCE482 0%, #FDB334 100%)
	marginBar()
	outline 1px solid rgb(252, 227, 128)
	outline-offset -5px
	border 1px solid #BBBBBB
	border-radius 2px
	box-shadow 0 10px 10px -10px rgba(0,0,55, 0.3)
	min-height 220px
	
	
	&_h3
		font-size 16px
		margin 10px 0
		text-align center
		
	&_p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
	&_button
		margin auto
		border-radius 2px
		border none
		center-text()
		font-size 14px
		width 170px
		height 40px
		letter-spacing .03em
		color #FFF
		border 1px solid #FFF
		transition .1s
			&:hover 
				cursor pointer	
		
		&:hover
			background-color rgba(255, 255, 255, 0.26)
			
		
		&_list_add
			float right
			right 37px
			top 30px
			color $bluelink
			cursor pointer
			font-size 80%
			z-index 2
			
			&:hover
				color $redlink	
	
	h3
		font-size 16px
		margin 10px 0
		text-align center
		
	p
		margin 0
		text-align center
		line-height 25px
		font-size 12px
		
#company-signup-auth
	text-align center
	
	.popup_input
		margin 5px auto